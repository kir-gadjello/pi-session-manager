{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Pi Session Manager",
  "version": "0.1.0",
  "identifier": "com.pi.session-manager",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [{
      "title": "Pi Session Manager",
      "width": 1400,
      "height": 900,
      "resizable": true,
      "fullscreen": false,
      "minWidth": 1000,
      "minHeight": 600,
      "devtools": true
    }],
    "security": {
      "csp": null,
      "capabilities": ["default"]
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all"
  }
}